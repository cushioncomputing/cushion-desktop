{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cushion",
  "version": "0.1.0",
  "identifier": "com.cushion.desktop",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "http://localhost:3000",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; connect-src 'self' ipc: http: https: ws: wss: data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' data:; img-src 'self' data: https: http: blob:; font-src 'self' data: https: http:; worker-src 'self' blob:; child-src 'self' blob:;",
      "dangerousDisableAssetCspModification": true,
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default permissions for the application",
          "windows": [
            "main"
          ],
          "webviews": [
            "main"
          ],
          "remote": {
            "urls": [
              "http://localhost:3000",
              "https://app.cushion.so"
            ]
          },
          "local": true,
          "permissions": [
            "notification:default",
            "notification:allow-request-permission",
            "notification:allow-is-permission-granted",
            "notification:allow-show",
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:event:default",
            "core:webview:default",
            "core:webview:allow-internal-toggle-devtools"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Cushion",
    "copyright": "Copyright Â© 2025 Cushion. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Async team collaboration tool",
    "longDescription": "Cushion is an async-first team collaboration platform that helps remote teams stay connected without the chaos of constant notifications.",
    "macOS": {
      "signingIdentity": "Developer ID Application: David Hawkins (UC763J2859)",
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "cushion"
        ]
      }
    }
  }
}