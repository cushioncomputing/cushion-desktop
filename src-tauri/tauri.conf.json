{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cushion Developer",
  "version": "0.4.12",
  "identifier": "com.cushion.desktop.dev",
  "build": {
    "devUrl": "http://localhost:3000",
    "frontendDist": "http://localhost:3000",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' *.youtube.com *.twitter.com va.vercel-scripts.com *.supercut.video; style-src 'self' 'unsafe-inline' *.googleapis.com; connect-src 'self' https://app.cushion.so https://*.cushion.so wss://app.cushion.so wss://*.cushion.so ipc: http://localhost:* ws://localhost:* https://*.posthog.com https://*.vercel-storage.com https://*.uploadthing.com https://*.supercut.video; img-src 'self' https: data: blob:; font-src 'self' data: *.googleapis.com *.gstatic.com unpkg.com; media-src 'self' https: blob:; worker-src 'self' blob:; child-src 'self' blob: *.youtube.com *.google.com *.twitter.com *.loom.com *.figma.com *.supercut.video; frame-src *.youtube.com *.twitter.com *.loom.com *.figma.com *.vimeo.com *.supercut.video;",
      "dangerousDisableAssetCspModification": false,
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default permissions for the application",
          "windows": [
            "main"
          ],
          "webviews": [
            "main"
          ],
          "remote": {
            "urls": [
              "http://localhost:3000",
              "https://app.cushion.so"
            ]
          },
          "local": true,
          "permissions": [
            "core:default",
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:event:default",
            "core:webview:default",
            "core:webview:allow-internal-toggle-devtools"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/dev-icon.icns",
      "icons/dev-icon.ico"
    ],
    "publisher": "Cushion",
    "copyright": "Copyright Â© 2025 Cushion. All rights reserved.",
    "category": "Productivity",
    "shortDescription": "Async team collaboration tool",
    "longDescription": "Cushion is an async-first team collaboration platform that helps remote teams stay connected without the chaos of constant notifications.",
    "macOS": {
      "signingIdentity": "Developer ID Application: David Hawkins (UC763J2859)",
      "minimumSystemVersion": "10.13",
      "dmg": {
        "background": "icons/dmg-background.png",
        "appPosition": {
          "x": 180,
          "y": 210
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 210
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "cushion-dev"
        ]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/cushioncomputing/cushion-desktop/releases/latest/download/latest-dev.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI4ODM3MDI3QTY3QTM2QUUKUldTdU5ucW1KM0NES0NiaDlUSzZQSHMzeDdyNzdXQzQrUGJMajk5NVRCeVV1elZCWXVyS3NBcjAK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
